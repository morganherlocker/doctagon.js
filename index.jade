html
  head
    link(rel='stylesheet', type='text/css', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='http://yandex.st/highlightjs/7.3/styles/default.min.css')
    script(src='http://yandex.st/highlightjs/7.3/highlight.min.js')
    title() #{name}
  body(style='max-width:700px;margin-left:auto;margin-right:auto')
    h1 #{name}
    hr
    div#toc
      ul
      each file in doc.files
        li 
          a(href='##{file.id}') #{file.name}
    hr
    div#content
      each file in doc.files
        div(id='#{file.id}')
          h3 #{file.name}
          //:markdown
          p!= file.content
    hr
    div
      p(align='center') generated by doctagon