html
  head
    link(rel='stylesheet', type='text/css', href='css/cobalt.css')
    link(rel='stylesheet', type='text/css', href='css/doctagon.css')
    link(rel='stylesheet', href='http://yandex.st/highlightjs/7.3/styles/default.min.css')
    script(src='http://yandex.st/highlightjs/7.3/highlight.min.js')
    title() #{name}
  body(style='background-color:#f2f2f2')
    div#container
      h1 #{name}
      hr
      div#toc
        each file in doc.files
          p
            a(href='##{file.id}') #{file.name}
      hr
      div#content
        each file in doc.files
          div(id='#{file.id}')
            h3 #{file.name}
            p!= file.content
      hr
      div
        p(align='center') generated by doctagon